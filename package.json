{
    "name": "vscode-dls",
    "displayName": "VSCode DLS",
    "description": "Support for Dlang using DLS",
    "icon": "res/icon.png",
    "version": "1.9.1",
    "preview": true,
    "publisher": "LaurentTreguier",
    "repository": {
        "url": "https://github.com/d-language-server/vscode-dls",
        "type": "git"
    },
    "author": {
        "name": "Laurent Tr√©guier",
        "url": "https://github.com/LaurentTreguier"
    },
    "bugs": {
        "url": "https://github.com/d-language-server/vscode-dls/issues"
    },
    "engines": {
        "vscode": "^1.25.1"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Linters",
        "Other"
    ],
    "keywords": [
        "multi-root ready",
        "dlang",
        "d",
        "dls"
    ],
    "activationEvents": [
        "onLanguage:d",
        "workspaceContains:dub.json",
        "workspaceContains:dub.sdl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "d",
                "aliases": [
                    "D",
                    "Dlang"
                ],
                "extensions": [
                    ".d",
                    ".di"
                ],
                "firstLine": "^#!.*rdmd",
                "configuration": "./syntaxes/d.configuration.json"
            },
            {
                "id": "dpp",
                "aliases": [
                    "D++",
                    "DPP"
                ],
                "extensions": [
                    ".dpp",
                    ".d++"
                ],
                "configuration": "./syntaxes/d.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "d",
                "scopeName": "source.d",
                "path": "./syntaxes/d.tmLanguage.json"
            },
            {
                "language": "dpp",
                "scopeName": "source.dpp",
                "path": "./syntaxes/dpp.tmLanguage.json"
            }
        ],
        "problemMatchers": [
            {
                "name": "dub-build",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": "$dub-build"
            },
            {
                "name": "dub-test",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": "$dub-test"
            }
        ],
        "problemPatterns": [
            {
                "name": "dub-build",
                "regexp": "^(.+\\.di?)\\D(\\d+)(?:,|:)?(\\d+)?\\S+\\s+([Ee]rror|[Ww]arning):\\s+(.+)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            },
            {
                "name": "dub-test",
                "regexp": "^.+@(.+\\.di?)\\((\\d+)\\S+\\s+(.+)$",
                "file": 1,
                "location": 2,
                "message": 3
            }
        ],
        "taskDefinitions": [
            {
                "type": "dub",
                "properties": {
                    "task": {
                        "description": "The dub task to launch",
                        "enum": [
                            "build",
                            "test"
                        ]
                    },
                    "build": {
                        "description": "The build type",
                        "type": "string",
                        "anyOf": [
                            {
                                "enum": [
                                    "plain",
                                    "debug",
                                    "release",
                                    "release-debug",
                                    "release-nobounds",
                                    "unittest",
                                    "docs",
                                    "ddox",
                                    "profile",
                                    "profile-gc",
                                    "cov",
                                    "unittest-cov"
                                ]
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "config": {
                        "description": "The build configuration",
                        "type": "string"
                    },
                    "compiler": {
                        "description": "The compiler used by dub",
                        "enum": [
                            "dmd",
                            "ldc2",
                            "gdc"
                        ]
                    },
                    "arch": {
                        "description": "The target architecture",
                        "anyOf": [
                            {
                                "enum": [
                                    "x86",
                                    "x86_mscoff",
                                    "x86_64"
                                ]
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "required": [
                    "task"
                ]
            }
        ],
        "configuration": [
            {
                "title": "D",
                "properties": {
                    "d": {
                        "type": "object",
                        "properties": {
                            "dubPath": {
                                "description": "Path to the dub executable",
                                "type": "string",
                                "default": "dub"
                            },
                            "dlsPath": {
                                "description": "Path to the dls executable",
                                "type": "string",
                                "default": ""
                            },
                            "init": {
                                "description": "DLS initatization options",
                                "type": "object",
                                "properties": {
                                    "autoUpdate": {
                                        "description": "Enable auto-updating",
                                        "type": "boolean",
                                        "default": true
                                    },
                                    "capabilities": {
                                        "description": "DLS enabled capabilities",
                                        "type": "object",
                                        "properties": {
                                            "hover": {
                                                "description": "Enable hover",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "completion": {
                                                "description": "Enable completion",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "definition": {
                                                "description": "Enable go-to-definition",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "documentHighlight": {
                                                "description": "Enable symbol highlighting",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "documentSymbol": {
                                                "description": "Enable document symbol search",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "workspaceSymbol": {
                                                "description": "Enable workspace symbol search",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "documentFormatting": {
                                                "description": "Enable formatting",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "rename": {
                                                "description": "Enable renaming",
                                                "type": "boolean",
                                                "default": true
                                            }
                                        }
                                    }
                                }
                            },
                            "dls": {
                                "description": "DLS configuration",
                                "type": "object",
                                "properties": {
                                    "symbol": {
                                        "description": "Symbols",
                                        "type": "object",
                                        "properties": {
                                            "importPaths": {
                                                "description": "Import paths",
                                                "type": "array",
                                                "default": []
                                            }
                                        }
                                    },
                                    "analysis": {
                                        "description": "Analysis",
                                        "type": "object",
                                        "properties": {
                                            "configFile": {
                                                "description": "D-Scanner config file",
                                                "type": "string",
                                                "default": "dscanner.ini"
                                            }
                                        }
                                    },
                                    "format": {
                                        "description": "Formatting",
                                        "type": "object",
                                        "properties": {
                                            "endOfLine": {
                                                "description": "End of line",
                                                "enum": [
                                                    "lf",
                                                    "cr",
                                                    "crlf"
                                                ],
                                                "default": "lf"
                                            },
                                            "maxLineLength": {
                                                "description": "Max line length",
                                                "type": "number",
                                                "default": 120
                                            },
                                            "dfmtAlignSwitchStatements": {
                                                "description": "Align switch statements",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "dfmtBraceStyle": {
                                                "description": "Brace style",
                                                "enum": [
                                                    "allman",
                                                    "otbs",
                                                    "stroustrup"
                                                ],
                                                "default": "allman"
                                            },
                                            "dfmtOutdentAttributes": {
                                                "description": "Outdent attributes",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "dfmtSoftMaxLineLength": {
                                                "description": "Soft max line length",
                                                "type": "number",
                                                "default": 80
                                            },
                                            "dfmtSpaceAfterCast": {
                                                "description": "Space after cast",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "dfmtSpaceAfterKeywords": {
                                                "description": "Space after keywords",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "dfmtSpaceBeforeFunctionParameters": {
                                                "description": "Space before function parameters",
                                                "type": "boolean",
                                                "default": false
                                            },
                                            "dfmtSplitOperatorAtLineEnd": {
                                                "description": "Split operator at line end",
                                                "type": "boolean",
                                                "default": false
                                            },
                                            "dfmtSelectiveImportSpace": {
                                                "description": "Selective import space",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "dfmtCompactLabeledStatements": {
                                                "description": "Compact labeled statements",
                                                "type": "boolean",
                                                "default": true
                                            },
                                            "dfmtTemplateConstraintStyle": {
                                                "description": "Template constraint style",
                                                "enum": [
                                                    "conditionalNewlineIndent",
                                                    "conditionalNewline",
                                                    "alwaysNewline",
                                                    "alwaysNewlineIndent"
                                                ],
                                                "default": "conditionalNewlineIndent"
                                            },
                                            "dfmtSingleTemplateConstraintIndent": {
                                                "description": "Single template constraint indent",
                                                "type": "boolean",
                                                "default": false
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^8.x.x",
        "typescript": "^3.0.1",
        "vsce": "^1.46.0",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "vscode-languageclient": "^5.0.0"
    }
}
