{
    "name": "vscode-dls",
    "displayName": "VSCode DLS",
    "description": "Support for Dlang using DLS",
    "icon": "res/icon.png",
    "version": "1.8.1",
    "preview": true,
    "publisher": "LaurentTreguier",
    "repository": {
        "url": "https://github.com/LaurentTreguier/vscode-dls",
        "type": "git"
    },
    "author": {
        "name": "Laurent Tr√©guier",
        "url": "https://github.com/LaurentTreguier"
    },
    "bugs": {
        "url": "https://github.com/LaurentTreguier/vscode-dls/issues"
    },
    "engines": {
        "vscode": "^1.25.1"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Linters",
        "Other"
    ],
    "keywords": [
        "multi-root ready",
        "dlang",
        "d",
        "dls"
    ],
    "activationEvents": [
        "onLanguage:d",
        "workspaceContains:dub.json",
        "workspaceContains:dub.sdl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "d",
                "aliases": [
                    "D",
                    "Dlang"
                ],
                "extensions": [
                    ".d",
                    ".di"
                ],
                "firstLine": "^#!.*rdmd",
                "configuration": "./syntaxes/d.configuration.json"
            },
            {
                "id": "dpp",
                "aliases": [
                    "D++",
                    "DPP"
                ],
                "extensions": [
                    ".dpp",
                    ".d++"
                ],
                "configuration": "./syntaxes/d.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "d",
                "scopeName": "source.d",
                "path": "./syntaxes/d.tmLanguage.json"
            },
            {
                "language": "dpp",
                "scopeName": "source.dpp",
                "path": "./syntaxes/dpp.tmLanguage.json"
            }
        ],
        "problemMatchers": [
            {
                "name": "dub-build",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": "$dub-build"
            },
            {
                "name": "dub-test",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": "$dub-test"
            }
        ],
        "problemPatterns": [
            {
                "name": "dub-build",
                "regexp": "^(.+\\.di?)\\D(\\d+)(?:,|:)?(\\d+)?\\S+\\s+([Ee]rror|[Ww]arning):\\s+(.+)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            },
            {
                "name": "dub-test",
                "regexp": "^.+@(.+\\.di?)\\((\\d+)\\S+\\s+(.+)$",
                "file": 1,
                "location": 2,
                "message": 3
            }
        ],
        "configuration": [
            {
                "title": "D",
                "properties": {
                    "d.dubPath": {
                        "type": "string",
                        "default": "dub"
                    },
                    "d.dlsPath": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null
                    },
                    "d.dls.symbol.importPaths": {
                        "type": "array",
                        "default": []
                    },
                    "d.dls.analysis.configFile": {
                        "type": "string",
                        "default": "dscanner.ini"
                    },
                    "d.dls.format.endOfLine": {
                        "type": "string",
                        "enum": [
                            "lf",
                            "cr",
                            "crlf"
                        ],
                        "default": "lf"
                    },
                    "d.dls.format.maxLineLength": {
                        "type": "number",
                        "default": 120
                    },
                    "d.dls.format.dfmtAlignSwitchStatements": {
                        "type": "boolean",
                        "default": true
                    },
                    "d.dls.format.dfmtBraceStyle": {
                        "type": "string",
                        "enum": [
                            "allman",
                            "otbs",
                            "stroustrup"
                        ],
                        "default": "allman"
                    },
                    "d.dls.format.dfmtOutdentAttributes": {
                        "type": "boolean",
                        "default": true
                    },
                    "d.dls.format.dfmtSoftMaxLineLength": {
                        "type": "number",
                        "default": 80
                    },
                    "d.dls.format.dfmtSpaceAfterCast": {
                        "type": "boolean",
                        "default": true
                    },
                    "d.dls.format.dfmtSpaceAfterKeywords": {
                        "type": "boolean",
                        "default": true
                    },
                    "d.dls.format.dfmtSpaceBeforeFunctionParameters": {
                        "type": "boolean",
                        "default": false
                    },
                    "d.dls.format.dfmtSplitOperatorAtLineEnd": {
                        "type": "boolean",
                        "default": false
                    },
                    "d.dls.format.dfmtSelectiveImportSpace": {
                        "type": "boolean",
                        "default": true
                    },
                    "d.dls.format.dfmtCompactLabeledStatements": {
                        "type": "boolean",
                        "default": true
                    },
                    "d.dls.format.dfmtTemplateConstraintStyle": {
                        "type": "string",
                        "enum": [
                            "conditionalNewlineIndent",
                            "conditionalNewline",
                            "alwaysNewline",
                            "alwaysNewlineIndent"
                        ],
                        "default": "conditionalNewlineIndent"
                    },
                    "d.dls.format.dfmtSingleTemplateConstraintIndent": {
                        "type": "boolean",
                        "default": false
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^7.x.x",
        "typescript": "^3.0.1",
        "vsce": "^1.46.0",
        "vscode": "^1.1.18"
    },
    "dependencies": {
        "vscode-languageclient": "^4.4.0"
    }
}
